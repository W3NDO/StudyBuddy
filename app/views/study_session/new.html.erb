<div class="max-w-lg my-6 mx-auto p-6 bg-white rounded-lg shadow-md">
  <h2 class="text-2xl font-bold text-gray-800 mb-6">Create a New Study Session</h2>

  <%= form_with(model: @study_session, url: study_session_index_path, local: true) do |f| %>
    <!-- Session Name -->
    <div class="mb-4">
      <%= f.label :name, "Session Name", class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.text_field :session_name, placeholder: "eg Biochem Revision", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-400" %>
    </div>

    <!-- Session Description -->
    <div class="mb-4">
      <%= f.label :description, "Session Description", class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.text_area :session_description, placeholder: "A brief description of your topic of study.", rows: 6, class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-400 overflow-y-scroll" %>
    </div>

    <!-- Topic -->
    <div class="mb-4">
      <%= f.label :topic, "Session Topics", class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.text_field :topic, rows: 4, placeholder: "eg Biochem, Phrenology, Kidneys", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-400" %>
    </div>

    <!-- Submit Button -->
    <div class="text-right">
      <%= f.submit "Create Session", class: "bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 focus:ring-4 focus:ring-indigo-300 focus:outline-none" %>
    </div>
  <% end %>
</div>
